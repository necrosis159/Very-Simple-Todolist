{% extends 'basePreLogin.html.twig' %}
{% block title %}Hello!{% endblock %}
{% block body %}
    <div class="justify-content-center">

        <img height="50" src="/img/logo.png">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {{error}}
        {% endif %}

        <img src="{{ asset('img/brand/logo.svg') }}" id="logoprelogin" alt="" style="width:300px;height:auto;margin-bottom:50px;">
        <div class="card-body"><br>
            <p class="text-muted">Veuillez vous identifier</p>
            <form action="{{ path('login') }}" method="post">
                <div class="input-group" style="width:100%;">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="icon-user"></i>
                        </span>
                    </div>
                    <input type="text" name="_username" id="username" class="form-control" placeholder="Username" value="{{ last_username }}">
                </div>
                <div class="input-group" style="width:100%;">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="icon-lock"></i>
                        </span>
                    </div>
                    <input type="password" id="password" name="_password" class="form-control" placeholder="Password">
                </div>
                <div class="row" style="margin-top:50px;">
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary px-4">Login</button>
                    </div>
                    <div class="col-6 text-right">
                        <button type="button" class="btn btn-link px-0">Forgot password?</button>
                    </div>
                </div>
            </form>
        </div>

    </div>
{% endblock %}